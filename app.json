{
  "expo": {
    "name": "Checkmate",
    "slug": "checkmate",
    "scheme": "checkmate",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "platforms": ["ios", "android"],
    "icon": "./assets/icon.png",
    "privacy": "public",
    "primaryColor": "#007AFF",

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mycheckmateapp.checkmate",
      "buildNumber": "1",
      "requireFullScreen": false,
      "bitcode": false,
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan receipts and documents for transaction entry.",
        "NSContactsUsageDescription": "This app accesses your contacts to help you split bills and share expenses with friends.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice memos and transaction notes.",
        "NSUserTrackingUsageDescription": "This app uses tracking to provide personalized financial insights and improve your experience.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to help categorize transactions based on nearby merchants.",
        "NSCalendarsUsageDescription": "This app accesses your calendar to schedule bill payment reminders and financial planning events.",
        "ITSAppUsesNonExemptEncryption": false,
        "CFBundleAllowMixedLocalizations": true,
        "CFBundleDevelopmentRegion": "en",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "checkmate"
            ]
          }
        ]
      },
      "associatedDomains": [
        "applinks:modernmillennial.github.io"
      ]
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.mycheckmateapp.checkmate",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO", 
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "modernmillennial.github.io",
              "pathPrefix": "/checkmate-plaid-redirect"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "extra": {
      "eas": {
        "projectId": "68e1fcfd-934d-488d-b106-b797c5729482"
      }
    },
    "plugins": [
      "expo-linking"
    ]
  }
}
